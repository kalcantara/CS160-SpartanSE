.main_content
  #review_top.row
    .col-md-4
      = image_tag @review.image.url(:medium), class: "review_image"
    .col-md-8
      #review_info
        %h1= @review.title
        %p.description= @review.description
        %p
          Submitted by
          = @review.user.email
        %h2= "Comments"
        %p
          - @review.comments.each do |c|
            = current_user.email 
            = "wrote:" 
            = c.body
            %p
        
        %p
        - if current_user
          = form_for([@review, @review.comments.build]) do |f|
            %div{:class => "field"}
              = f.label :user
              %p
              - if current_user
                = current_user.email
            %p
            %div{:class => "field"}
              = f.label "Comment"
              %p
              = f.text_area :body
            %div{:class => "actions"}
              = f.submit



  .row
    .col-md-12
      = link_to "Back", root_path, class: "btn btn-default"
      - if user_signed_in?
        = link_to "Edit", edit_review_path, class: "btn btn-default"
        = link_to "Delete", review_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"
